<div class="row">
  <div class="col-xs-8">
		<%= bootstrap_form_for [:admin, @post] do |n| %>
			<%= n.text_field :title, class: "form-control input-lg", placeholder: "title" %>
			<%= n.text_field :tag_list, class: "form-control input-lg", placeholder: "tags" %>
			<%= n.text_field :status, class: "form-control input-lg", placeholder: "status" %>
			<%= n.file_field :image, class: "form-control input-lg", placeholder: "image" %>
			<%= n.text_area :content, :class => "redactor", :rows => 40, :cols => 120 %>
			<%= n.submit '送出' %>
		<% end %>
	</div>
	<%= link_to('返回上層', admin_posts_url) %>
</div>