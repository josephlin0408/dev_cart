	<div class="row">
  	<div class="col-xs-2">
 	</div>
  <div class="col-xs-7">
		<div class="portfolio-box">
				<div class="blog-post">
					<div class="postblog-content">
						<div class="blog-content">
							<h2>title:<%= @post.title %></h2>
							<b><p>內容:<%= raw @post.content %></p></b>
							<p>comments:<%=  %></p>
							<p>views:<%= %></p>
							<p>create_date:<%= @post.created_at %></p>
								<div id ="disqus_thread">  
									<%= raw disqus_thread %>  
								</div>  
							<p><%= link_to('返回上層', posts_url) %></p>					
						</div>
					</div>
				</div>
		</div>
	</div>
		<div class="row">
  		<div class="col-xs-3">
 		</div>
	</div>			
</div>